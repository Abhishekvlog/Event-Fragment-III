<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".PreviewActivity">

    <TextView
        android:id="@+id/TvEventTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Title"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/TvEvenDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Desc"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/TvEventstartdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event start date"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/TvEventenddate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event end date"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/TvEventstarttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event start time"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/TvEventendtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event end time"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:id="@+id/TvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:layout_marginTop="10sp"
        />


</LinearLayout>
