<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20sp"
    tools:context=".TimeAndDateFragment">

    <EditText
        android:id="@+id/EtStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Event start date"
        android:layout_marginTop="10sp"
        android:layout_marginStart="100sp"/>
    <EditText
        android:id="@+id/EtEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Event end date"
        android:layout_marginTop="10sp"
        android:layout_marginStart="100sp"/>
    <EditText
        android:id="@+id/EtStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:hint="Event start time"
        android:layout_marginStart="100sp"/>
    <EditText
        android:id="@+id/EtEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Event end time"
        android:layout_marginStart="100sp"
        android:layout_marginTop="10sp"
        />
    <Button
        android:id="@+id/BtnPreNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="20sp"
        android:layout_marginStart="130sp"/>

</LinearLayout>